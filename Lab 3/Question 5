#include<stdio.h>
int main()
{
float Principal , RateOfInterest , TimePeriod , SimpleInterest ;
printf("Enter value for principle between 100-1000000");
scanf("%f" ,&Principal);
  if (Principal<100 || Principal>1000000);
{printf("value is not correct /n");}
 
printf("Enter RateOfInterest between 5-10");
scanf("%f" ,&RateOfInterest);
  if (RateOfInterest<5 ||RateOfInterest>10);
{printf("RateOfInterest is out of range/n");}

printf("Enter value for TimePeriod between 1-10 years");
scanf("%f",&TimePeriod);
  if (TimePeriod<1 || TimePeriod>10);
{printf("TimePeriod is out of range");}

SimpleInterest= (RateOfInterest*TimePeriod*Principal)/100;
printf("SimpleInterest is: %.2f", SimpleInterest);
return 0;
}
